<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    >

    <TextView
        android:id="@+id/pickupPoint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/destinations_divider"
        android:layout_margin="8dp"
        android:text="A"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/dropoffPoint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/divider"
        app:layout_constraintStart_toStartOf="@id/destinations_divider"
        android:text="B"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.8"
        android:orientation="vertical"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/destinations_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4"
        />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="150$"
        android:textStyle="bold"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/divider"
        android:textSize="24sp"
        android:textColor="#000000"
        />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/pickupPoint"
        android:background="@android:color/black"
        android:alpha="0.5"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/driver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Alexandr Vodila"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="22dp"
        app:layout_constraintEnd_toStartOf="@id/category"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/driver"
        app:layout_constraintStart_toEndOf="@id/driver"
        app:layout_constraintEnd_toEndOf="@id/divider"
        android:text="Standart"

        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/estimate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 min"
        android:gravity="center"
        android:padding="6dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/divider"
        android:textColor="@android:color/white"
        android:background="@drawable/shape_rounded"
        android:backgroundTint="@color/primaryDarkColor"
        />

    <TextView
        android:id="@+id/decline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/driver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/accept"
        android:text="Decline"
        style="@style/TaxoButton"
        android:background="@drawable/shape_button_secondary"
        android:textColor="@color/secondaryTextColor"
        android:layout_margin="32dp"
        />

    <TextView
        android:id="@+id/accept"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Accept"
        app:layout_constraintTop_toBottomOf="@id/driver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/decline"
        android:layout_margin="32dp"
        style="@style/TaxoButton"
        android:background="@drawable/shape_button"
        />



</androidx.constraintlayout.widget.ConstraintLayout>